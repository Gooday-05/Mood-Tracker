from kivy.app import App
from kivy.uix.boxlayout import BoxLayout
from kivy.uix.image import Image
from kivy.uix.label import Label
from kivy.graphics import Color, Rectangle
from kivy.core.window import Window

class MainLayout(BoxLayout):
    def __init__(self, **kwargs):
        super().__init__(**kwargs)
        self.orientation = 'vertical'
        self.spacing = 10
        self.padding = 10
        
        # Optional: Set window size
        Window.size = (300, 500)
        
        # Draw background color (#e5dbc5)
        with self.canvas.before:
            Color(229/255, 219/255, 197/255, 1)  # RGBA for #e5dbc5
            self.bg_rect = Rectangle(pos=self.pos, size=self.size)
        self.bind(pos=self.update_bg, size=self.update_bg)
        
        # -------------------
        # Top Bar
        # -------------------
        top_bar = BoxLayout(
            orientation='horizontal',
            size_hint=(1, None),
            height=100
        )
        
        # Profile Picture (Left)
        profile_pic = Image(
            source="C:\\Users\\admin\\Desktop\\PP.jpg",  # Update with your image path
            size_hint=(None, 1),
            width=50,
            allow_stretch=True,
            keep_ratio=True
        )
        top_bar.add_widget(profile_pic)
        
        # User Info (Center)
        user_info = BoxLayout(orientation='vertical')
        
        username_label = Label(
            text="User Name",
            font_size='18sp',
            halign='left',
            valign='middle'
        )
        username_label.bind(size=lambda w, s: setattr(w, 'text_size', s))
        user_info.add_widget(username_label)
        
        friends_label = Label(
            text="Friends 6",
            font_size='14sp',
            halign='left',
            valign='middle'
        )
        friends_label.bind(size=lambda w, s: setattr(w, 'text_size', s))
        user_info.add_widget(friends_label)
        
        top_bar.add_widget(user_info)
        
        # Settings Icon (Right)
        settings_img = Image(
            source="C:\\Users\\admin\\Desktop\\set.jpg",  # Update with your settings icon path
            size_hint=(None, 1),
            width=50,
            allow_stretch=True,
            keep_ratio=True
        )
        top_bar.add_widget(settings_img)
        
        self.add_widget(top_bar)
        
        # -------------------
        # Middle Section
        # -------------------
        mid_layout = BoxLayout(orientation='vertical')
        
        # Friend Streak Image (e.g., a flame icon)
        streak_img = Image(
            source="C:\\Users\\admin\\Desktop\\streak.jpg",  # Update with your friend streak image path
            size_hint=(1, None),
            height=100,
            allow_stretch=True,
            keep_ratio=True
        )
        mid_layout.add_widget(streak_img)
        
        # Optionally, a Label for additional text (e.g., "NO.")
        no_label = Label(
            text="NO.",
            font_size='24sp',
            halign='center',
            valign='middle'
        )
        no_label.bind(size=lambda w, s: setattr(w, 'text_size', s))
        mid_layout.add_widget(no_label)
        
        self.add_widget(mid_layout)
    
    def update_bg(self, *args):
        """Update the background rectangle to match the layout size."""
        self.bg_rect.pos = self.pos
        self.bg_rect.size = self.size

class MyApp(App):
    def build(self):
        return MainLayout()

if __name__ == '__main__':
    MyApp().run()
