ScreenManager:
    StartScreen:
        name: "start"
    HomePageScreen:
        name: "homepage"
    CommunityScreen:
        name: "community"
    QuestionnaireScreen:
        name: "questionnaire"
    LoginScreen:
        name: "login"
    RegisterScreen:
        name: "register"

<StartScreen>:
    canvas.before:
        Color:
            rgba: 0.96, 0.92, 0.88, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Mental Health Check-In"
        font_size: 24
        color: 0, 0, 0, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20
        size_hint_y: 0.3
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "Take Questionnaire"
            font_size: 16
            background_color: 0.2, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_press: app.change_screen("questionnaire")

        Button:
            text: "Login Directly"
            font_size: 16
            background_color: 0.2, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_press: app.change_screen("homepage")

<HomePageScreen>:
    canvas.before:
        Color:
            rgba: 0.96, 0.92, 0.88, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 0.15
            padding: 20
            spacing: 15

            Image:
                source: "profile_icon.png"
                size_hint: None, None
                size: 50, 50

            Label:
                id: greeting_label
                text: "Hello, Name!"
                font_size: 22
                bold: True
                color: 0, 0, 0, 1

        BoxLayout:
            size_hint_y: 0.3
            padding: 20

            Label:
                id: affirmation_label
                text: "You are enough!"
                font_size: 20
                color: 0, 0, 0, 1

        BoxLayout:
            size_hint_y: 0.15
            orientation: 'vertical'
            padding: 10

            Label:
                text: "Select your mood"
                font_size: 16
                color: 0, 0, 0, 1
                halign: 'center'

            Slider:
                id: mood_slider
                min: 0
                max: 4
                value: 2
                step: 1
                on_value: root.update_mood_label(self.value)

            Button:
                text: "Enter"
                size_hint_y: None
                height: dp(40)
                pos_hint: {"center_x": 0.5}
                on_press: root.store_manual_mood()

        MDBoxLayout:
            size_hint_y: 0.1
            padding: [20, 10]
            spacing: 40
            md_bg_color: 0.96, 0.92, 0.88, 1

            MDIconButton:
                icon: "home"
                on_release: app.change_screen("homepage")

            MDIconButton:
                icon: "chat"
                on_release: app.change_screen("community")

            MDIconButton:
                icon: "chart-bar"
                on_release: app.change_screen("analytics")

            MDIconButton:
                icon: "account"
                on_release: app.change_screen("profile")

<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        MDLabel:
            text: "Login"
            halign: "center"
            font_style: "H5"

        MDTextField:
            id: login_email
            hint_text: "Enter Email"
            icon_right_name: "email"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: login_password
            hint_text: "Enter Password"
            password: True
            icon_right_name: "lock"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "Login"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_press: root.login_user()


        MDRaisedButton:
            text: "Go to Register"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_press: app.change_screen("register")

<RegisterScreen>:
    name: "register"
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        MDTextField:
            id: name
            hint_text: "Enter Your Name"

        MDTextField:
            id: email
            hint_text: "Enter Email"

        MDTextField:
            id: password
            hint_text: "Enter Password"
            password: True

        MDTextField:
            id: confirm_password
            hint_text: "Confirm Password"
            password: True

        MDLabel:
            id: error_label
            text: ""
            theme_text_color: "Error"

        MDRaisedButton:
            text: "Register"
            on_release: root.register_user()

        MDRaisedButton:
            text: "Back to Login"
            on_release: app.sm.current = "login"


<QuestionnaireScreen>:
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)
            size_hint_y: None
            height: self.minimum_height

            MDLabel:
                text: "How do you feel today?"
                font_style: "H5"
                halign: "center"
                size_hint_y: None
                height: dp(50)

            # Question 1
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(80)

                MDLabel:
                    text: "1. How was your sleep?"
                    font_style: "Body1"
                    size_hint_y: None
                    height: dp(30)

                MDSlider:
                    id: q1
                    min: 1
                    max: 5
                    value: 3
                    step: 1

            # Question 2
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(80)

                MDLabel:
                    text: "2. How is your energy level?"
                    font_style: "Body1"
                    size_hint_y: None
                    height: dp(30)

                MDSlider:
                    id: q2
                    min: 1
                    max: 5
                    value: 3
                    step: 1

            # Question 3
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(80)

                MDLabel:
                    text: "3. How is your focus today?"
                    font_style: "Body1"
                    size_hint_y: None
                    height: dp(30)

                MDSlider:
                    id: q3
                    min: 1
                    max: 5
                    value: 3
                    step: 1

            # Question 4
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(80)

                MDLabel:
                    text: "4. How are your stress levels?"
                    font_style: "Body1"
                    size_hint_y: None
                    height: dp(30)

                MDSlider:
                    id: q4
                    min: 1
                    max: 5
                    value: 3
                    step: 1

            # Question 5
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(80)

                MDLabel:
                    text: "5. How is your mood overall?"
                    font_style: "Body1"
                    size_hint_y: None
                    height: dp(30)

                MDSlider:
                    id: q5
                    min: 1
                    max: 5
                    value: 3
                    step: 1

            BoxLayout:
                size_hint_y: None
                height: dp(60)

                MDRaisedButton:
                    text: "Submit"
                    size_hint_x: 0.6
                    pos_hint: {"center_x": 0.5}
                    on_release: root.submit_responses()  # ðŸ”¥ Fixed function call
                    size_hint_y: None
                    height: dp(50)


