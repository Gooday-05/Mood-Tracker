ScreenManager:
    StartScreen:
    HomePageScreen:

<StartScreen>:
    name: "start"
    BoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(40)

        Label:
            text: "Mental Health Check-In"
            font_size: dp(24)
            size_hint_y: None
            height: dp(50)

        Button:
            text: "Take Questionnaire"
            size_hint_y: None
            height: dp(50)
            on_release: app.root.current = "homepage"

        Button:
            text: "Login Directly"
            size_hint_y: None
            height: dp(50)
            on_release: app.root.current = "homepage"

<HomePageScreen>:
    name: "homepage"

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: 0.1
            padding: dp(10)
            spacing: dp(10)

            Image:
                source: "profile_icon.png"
                size_hint: None, None
                size: dp(50), dp(50)

            TextInput:
                id: name_input
                hint_text: "Enter Name"
                font_size: dp(20)
                multiline: False
                size_hint_x: 0.8
                on_text_validate: root.update_greeting(self)

        Label:
            id: greeting_label
            text: "Welcome!"
            font_size: dp(22)
            size_hint_y: 0.1

        Label:
            id: affirmation_label
            text: "Believe in yourself!"
            font_size: dp(20)
