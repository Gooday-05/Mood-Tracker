<StartScreen>:
    canvas.before:
        Color:
            rgba: 0.96, 0.92, 0.88, 1  # Light beige background
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Mental Health Check-In"
        font_size: 24
        color: 0, 0, 0, 1  # Black text for visibility
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20
        size_hint_y: 0.3
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "Take Questionnaire"
            font_size: 16
            background_color: 0.2, 0.2, 0.2, 1  # Dark gray for contrast
            color: 1, 1, 1, 1  # White text for visibility
            on_press: app.root.current = "homepage"

        Button:
            text: "Login Directly"
            font_size: 16
            background_color: 0.2, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_press: app.root.current = "homepage"

