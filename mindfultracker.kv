<StartScreen>:
    canvas.before:
        Color:
            rgba: 0.96, 0.92, 0.88, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Mental Health Check-In"
        font_size: 24
        color: 0, 0, 0, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20
        size_hint_y: 0.3
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "Take Questionnaire"
            font_size: 16
            background_color: 0.2, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_press: app.change_screen("homepage")

        Button:
            text: "Login Directly"
            font_size: 16
            background_color: 0.2, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_press: app.change_screen("homepage")

<HomePageScreen>:
    canvas.before:
        Color:
            rgba: 0.96, 0.92, 0.88, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        BoxLayout:
            size_hint_y: 0.15
            padding: 20
            spacing: 15

            Image:
                source: "profile_icon.png"
                size_hint: None, None
                size: 50, 50

            Label:
                id: greeting_label
                text: "Hello, Name!"
                font_size: 22
                bold: True
                color: 0, 0, 0, 1

        BoxLayout:
            size_hint_y: 0.3
            padding: 20

            Label:
                id: affirmation_label
                text: "You are enough!"
                font_size: 20
                color: 0, 0, 0, 1

        BoxLayout:
            size_hint_y: 0.2
            orientation: 'vertical'
            padding: 10

            Label:
                text: "Select your mood"
                font_size: 16
                color: 0, 0, 0, 1
                halign: 'center'

            Slider:
                id: mood_slider
                min: 0
                max: 4
                value: 2
                step: 1

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 30
                padding: [10, 0]
                spacing: 15

                Label:
                    text: "Sad"
                    font_size: 14
                    color: 0, 0, 0, 1
                
                Label:
                    text: "Stressed"
                    font_size: 14
                    color: 0, 0, 0, 1
                
                Label:
                    text: "Neutral"
                    font_size: 14
                    color: 0, 0, 0, 1
                
                Label:
                    text: "Good"
                    font_size: 14
                    color: 0, 0, 0, 1
                
                Label:
                    text: "Jolly"
                    font_size: 14
                    color: 0, 0, 0, 1

            Button:
                text: "Enter"
                size_hint_y: None
                height: dp(40)
                pos_hint: {"center_x": 0.5}
                on_press: root.log_mood()

        MDBoxLayout:
            size_hint_y: 0.1
            padding: [20, 10]
            spacing: 40
            md_bg_color: 0.96, 0.92, 0.88, 1

            MDIconButton:
                icon: "home"
                on_release: app.change_screen("homepage")

            MDIconButton:
                icon: "chat"
                on_release: app.change_screen("community")

            MDIconButton:
                icon: "chart-bar"
                on_release: app.change_screen("analytics")

            MDIconButton:
                icon: "account"
                on_release: app.change_screen("profile")
